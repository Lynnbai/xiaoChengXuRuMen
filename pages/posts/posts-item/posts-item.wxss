.temp-posts{
  margin: 30rpx 0;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
}
.posts-auto-data {
  display: flex;
  align-items: center;
}

.posts-auto-data image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}

.posts-title {
  margin: 10rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.posts-main-img {
  height: 340rpx;
  width: 100%;
  margin-top: 20rpx;
}
.posts-content-box{
  padding:17rpx;
  margin-bottom: 5rpx;
}
.posts-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.posts-like {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 13px;
  margin-bottom: 12rpx;
}
.posts-like text:nth-of-type(1){
  margin-right: 30rpx;
}

.posts-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
}